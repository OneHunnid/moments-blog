{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main class="main-content" role="main">
    <article class="{{post_class}}">

      {{#has tag="case study"}}
        <div class="case-study__container">

          <!-- Sidebar -->
          <aside class="case-study__sidebar">
            <div class="case-study__sidebar__image" style="background-image: url({{image}})"></div>
            <div id="caseStudyNav"></div>
          </aside>

          <!-- Blog Header & Content -->
          <section class="case-study__content">
            <header class="case-study__header">
              <h1 class="case-study__header__title">{{title}}</h1>
              <section class="case-study__header__meta">
                  {{tags suffix=" • "}}<time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD YYYY"}}</time>
              </section>
              <hr>
            </header>
            {{content}}
          </section>
        </div>

      {{else}}

        <header class="page-header">
          <h1 class="page-header__title">{{title}}</h1>
          <section class="page-header__meta">
              {{tags suffix=" • "}}<time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD YYYY"}}</time>
          </section>
        </header>

        <!-- Blog Post  -->
        <section class="post-content">
          {{content}}
        </section>

      {{/has}}

      <footer class="post-footer">
        {{!-- Share Icons --}}
         <section class="post-share">
             <a class="icon icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                 onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                 <span class="hidden">Share on Twitter</span>
             </a>
             <a class="icon icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                 onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                 <span class="hidden">Share on Facebook</span>
             </a>
             <a class="icon icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                 <span class="hidden">Share on Google+</span>
             </a>
         </section>

       {{!-- Author Information--}}
         {{#author}}
           <section class="author">
             {{#if image}}
                 <a class="author__image" href="{{url}}" style="background-image: url({{image}})"></a>
             {{/if}}

             <div class="author__content">
               <div class="author__name"><a href="{{url}}">{{name}}</a></div>

               {{#if bio}}
                   <p class="author__desc">{{bio}}</p>
               {{else}}
                   <p>Read <a href="{{url}}">more posts</a> by this author.</p>
               {{/if}}
               <div class="author__meta">
                   {{#if website}}<span class="author__meta-link"><a href="{{website}}">Personal Website</a></span>{{/if}}
                   {{#if twitter}}<span class="author__meta-link"><a href="https://twitter.com/{{twitter}}">Follow on Twitter</a></span>{{/if}}
               </div>
             </div>
           </section>
         {{/author}}

       {{!-- Links to Previous/Next posts --}}
         <aside class="recommendations">
           <div class="recommendations-title">Recommended Articles</div>
           <div class="recommendations__wrapper">
             {{#next_post}}
             <a class="recommendations__post" href="{{url}}">
               <div class="recommendations__post-title">{{title}}</div>
             </a>
             {{/next_post}}
             {{#prev_post}}
             <a class="recommendations__post" href="{{url}}">
               <div class="recommendations__post-title">{{title}}</div>
             </a>
             {{/prev_post}}
           </div>
         </aside>
      </footer>

    </article>
</main>

{{/post}}
