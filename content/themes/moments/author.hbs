{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

{{!-- Everything inside the #author tags pulls data from the author --}}
{{#author}}
    <section class="post-header">
        <h1 class="post-header__title">{{name}}</h1>
        {{#if bio}}
            <h2 class="post-header__desc">{{bio}}</h2>
        {{/if}}
        <div class="author__meta">
            {{#if website}}<span class="author__meta__link"><a href="{{website}}">Personal Website</a></span>{{/if}}
            {{#if twitter}}<span class="author__meta__link"><a href="https://twitter.com/{{twitter}}">Follow on Twitter</a></span>{{/if}}
        </div>
    </section>
{{/author}}

{{!-- The main content area on the homepage --}}
<main class="main-content blog-list" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
